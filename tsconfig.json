{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7",
      "dom",
      "es2015.core"
    ],
    "paths": {
      "*": [
        "src/*",
        "*"
      ]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "traceResolution": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
