{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./",
    "lib": [
      "es5",
      "dom",
      "es2015.core"
    ],
    "paths": {
      "*": [
        "src/*",
        "*"
      ]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "traceResolution": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
